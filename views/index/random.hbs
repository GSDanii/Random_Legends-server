<div class="row row-cols-1 row-cols-md-2 g-4 mx-4">
    <div class="col">
        <div class="card text-center">
            <p class="text-danger h2">{{randomChamp}}</p>
            <img src="{{image}}" class="card-img-top" alt="champImage">
            <div class="card-body d-flex justify-content-around">
                {{#each items}}
                <img src="{{this}}" alt="image">
                {{/each}}
            </div>
            <input class="btn btn-dark" type="button" value="New Random Champion"
                onClick="document.location.reload(true)">
        </div>
    </div>
    <div class="mb-3 col">
        <form action="/forum/post" method="post">
            <div>
                <label for="" class="form-label text-light">Title:</label>
                <input type="text" name="title" class="form-control w-50">
            </div>
            <div class="mt-3">
                <label for="exampleFormControlTextarea1" class="form-label text-light">Comment your Random
                    Pick!!</label>
                <textarea class="form-control w-75" name="description" rows="3"></textarea>
            </div>
            <div>
                {{#each items}}
                <input type="hidden" class="form-control" name="imgItems" value="{{this}}"></input>
                {{/each}}
                <input type="hidden" class="form-control" name="imgChamp" value='{{image}}'></input>
                <button type="submit" class="btn btn-warning mt-3">Submit</button>
            </div>
        </form>
    </div>
</div>

