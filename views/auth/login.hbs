                <input type="password" name="password" placeholder="Password" required="required">

                <div class="checkbox">
                    <input type="checkbox" id="keep">
                    <label for="keep">Remember me</label>
                </div>

                <div class="button">
                    <button type="submit">&#x279C;</button>
                </div>
                {{#if messageError}}
                <p>{{messageError}}</p>
                {{/if }}
            </form>
        </div>
